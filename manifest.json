{
	"manifest_version": 3,
	"name": "PhiLNet Vanguard",
	"version": "1.2",
	"description": "Detect phishing websites in real-time via secure backend API.",
	"permissions": ["storage", "tabs", "scripting"],
	"host_permissions": ["<all_urls>"],
	"background": {
		"service_worker": "background.js"
	},
	"web_accessible_resources": [
		{
			"resources": [
				"whitelist.txt",
				"block.html",
				"block.css",
				"block_content.html",
				"block_content.css",
				"block.js",
				"utils.js"
			],
			"matches": ["<all_urls>"]
		}
	],
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["utils.js", "redirector.js"],
			"run_at": "document_start"
		}
	],
	"action": {
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		},
		"default_title": "PhiLNet Vanguard",
		"default_popup": "popup.html"
	}
}
